CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@
sysconfdir	= @sysconfdir@
libdir		= @libdir@
sbindir		= @sbindir@
DOCDIR		= @DOCDIR@
MODDIR		= @MODDIR@
SHAREDIR	= @SHAREDIR@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@ -DPREFIX=\"@prefix@\" -I../include -I../libatheme @PGINC@
PICFLAGS	= @PICFLAGS@
CFLAGS		= @CFLAGS@ -I../include @PGINC@ -I../libatheme

LIBS		= @LIBS@ @PQLIB@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

SRCS = \
	cs_count.c		\
	cs_kickdots.c		\
	cs_ping.c		\
	fc_dice.c		\
	gen_echoserver.c	\
	gen_httpd.c	\
	gen_listenerdemo.c	\
	gen_vhostonreg.c	\
	ircd_catserv.c		\
	ircd_nohalfops.c	\
	ircd_noowner.c		\
	ircd_noprotect.c	\
	ns_generatepass.c	\
	ns_enforce.c		\
	us_generatepass.c	\
	os_pingspam.c

# To compile your own modules, add them to SRCS or make blegh.so
# Note: anope_convert.c cannot be compiled with this Makefile as it is
# an anope module, not an atheme module.

OBJS = ${SRCS:.c=.so}

all: ${OBJS}

install:
	${INSTALL} -d ${MODDIR}/contrib
	${INSTALL} -m 755 *.so ${MODDIR}/contrib

.SUFFIXES: .so

.c.so:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< -o $@

.PHONY: depend clean distclean
# This sed command sucks but I don't know a better way -- jilles
depend:
	${MKDEP} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} ${SRCS} | sed -e 's/\.o:/.so:/' > .depend

clean:
	${RM} -f *.so

distclean: clean
	${RM} -f Makefile version.c.last

include .depend
