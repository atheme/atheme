CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@
sysconfdir	= @sysconfdir@
libdir		= @libdir@
sbindir		= @sbindir@
DOCDIR		= @DOCDIR@
MODDIR		= @MODDIR@
SHAREDIR	= @SHAREDIR@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@ -DPREFIX=\"@prefix@\" -I../../include -I../../libatheme @PGINC@
PICFLAGS	= @PICFLAGS@
CFLAGS		= @CFLAGS@ -I../../include -I../../libatheme @PGINC@

LIBS		= @LIBS@ @PQLIB@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = 		\
	main.c		\
	akick.c		\
	ban.c		\
	clear.c		\
	clear_bans.c	\
	clear_users.c	\
	close.c		\
	count.c		\
	drop.c		\
	fflags.c	\
	flags.c		\
	ftransfer.c	\
	getkey.c	\
	halfop.c	\
	help.c		\
	hold.c		\
	info.c		\
	invite.c	\
	kick.c		\
	list.c		\
	mark.c		\
	op.c		\
	recover.c	\
	register.c	\
	set.c		\
	status.c	\
	taxonomy.c	\
	template.c	\
	topic.c		\
	version.c	\
	voice.c		\
	why.c		\
	xop.c

SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.so}

all: modules

build: all

install: build
	${INSTALL} -d $(DESTDIR)${MODDIR}/modules/chanserv
	${INSTALL} -m 755 *.so $(DESTDIR)${MODDIR}/modules/chanserv

modules: $(OBJS)

.SUFFIXES: .so

.c.so:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< -o $@

.PHONY: depend clean distclean
# This sed command sucks but I don't know a better way -- jilles
depend:
	${MKDEP} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} ${BASE_SRCS} | sed -e 's/\.o:/.so:/' > .depend

clean:
	${RM} -f *.so

distclean: clean
	${RM} -f Makefile version.c.last

include .depend
